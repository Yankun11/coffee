<my-banner swiperArr="{{swiperArr}}"></my-banner>

<view class="main">
	<!-- 撌西器 -->
	<scroll-view class="left" scroll-y="true" scroll-into-view="{{leftId}}">
		<view wx:for="{{menuArr}}" wx:key="*this" id="left{{item.id}}" class="scroll-view-item">{{item.title}}</view>
	</scroll-view>
	<!-- 撌西器 -->
	<scroll-view class="right" scroll-y="true" bindscroll="scroll" scroll-into-view="{{rightId}}">
		<view wx:for="{{menuArr}}" wx:key="*this" id="right{{item.id}}" class="scroll-view-item">
			<view class="title">{{item.title}}</view>
			<view class="content">
				<view class="box" wx:for="{{item.sunArr}}" wx:key="*this" wx:for-item="items">
					<image src="{{items.imgSrc}}"></image>
					<text>{{items.imgDesc}}</text>
				</view>
			</view>
		</view>
	</scroll-view>
</view>